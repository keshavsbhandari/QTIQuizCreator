{
  "manifest_version": 3,
  "name": "QTIQuiz Creator",
  "version": "0.2",
  "description": "Create Canvas-compatible quiz files from JSON content",
  "author": "Keshav Bhandari",
  "homepage_url": "https://github.com/keshavbhandari/QTIQuiz-Creator",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "downloads"
  ],
  "web_accessible_resources": [{
    "resources": ["prompt.txt"],
    "matches": ["<all_urls>"]
  }]
} 